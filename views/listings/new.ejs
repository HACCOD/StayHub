<% layout('layouts/boilerplate') -%>
<body>
  <div class="row col-8 offset-2">
    <h2>Add New Listing</h2>

    <form
      method="post"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label"
          >Title<span class="text-danger">*</span></label
        >
        <input
          type="text"
          id="title"
          name="listing[title]"
          required
          placeholder="Enter catchy title "
          class="form-control"
        />
        <div class="invalid-feedback">Please enter title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"
          >Description<span class="text-danger">*</span></label
        >
        <textarea
          id="description"
          name="listing[description]"
          rows="4"
          placeholder="Write a short description..."
          class="form-control"
        ></textarea>
        <div class="invalid-feedback">Please enter short description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          type="file"
          id="image"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label"
            >Price<span class="text-danger">*</span></label
          >
          <input
            type="number"
            id="price"
            name="listing[price]"
            min="0"
            placeholder="2,000"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label"
            >Country<span class="text-danger">*</span>
          </label>
          <input
            type="text"
            id="country"
            name="listing[country]"
            placeholder="Pakistan"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter country name.</div>
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="category" class="form-label">
            Category <span class="text-danger">*</span>
          </label>
          <select name="listing[category]" id="category" class="form-control" required>
            <option value="">-- Select Category --</option>
            <% const categories = [ "Trending", "Rooms", "Iconic Cities",
            "Mountains", "Amazing Pools", "Camping", "Farms", "Domes", "Boats"
            ]; %> <% categories.forEach(category => { %>
            <option value="<%= category %>"><%= category %></option>
            <% }) %>
          </select>

          <div class="invalid-feedback">Please select valid Category.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label"
            >Location<span class="text-danger">*</span></label
          >
          <input
            type="text"
            id="location"
            name="listing[location]"
            placeholder="Bhimber, AJK"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter location.</div>
        </div>
      </div>

      <button type="submit" class="btn btn-dark custom-btn">
        Submit Listing
      </button>
    </form>
  </div>
  <br /><br />
</body>
